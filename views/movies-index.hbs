<h1>Movies</h1>

<ul>
	{{#each movies as |movie|}}
		{{#with (lookup ../metadata [id]) as |metadatum|}}
			<li>
				<a href='/movies/{{movie.id}}'>
					<img src='https://image.tmdb.org/t/p/w500/{{movie.poster_path}}' />
				</a>

				<img src='https://img.youtube.com/vi/{{metadatum.featured_video.key}}/hqdefault.jpg' />
			</li>
		{{/with}}
	{{/each}}
</ul>
