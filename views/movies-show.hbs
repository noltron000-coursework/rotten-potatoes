<h1>
	{{movie.title}}
</h1>

{{> components/feature-poster config=config linked=false}}
{{> components/feature-video}}
{{> components/list-genres}}
{{> components/list-factoids}}
{{> components/plot-overview}}
{{> components/ratings-summary}}
{{> components/ratings-histogram}}

<div>
	<h2>Reviews</h2>
	<a
		href='/reviews/new?movieId={{movie.api_id}}'
		class='btn btn-primary'
	>
		Write Review
	</a>

	{{!-- {{log movie.opinions.all.ratings.histogram}} --}}

	<pre><code>{{json movie}}</code></pre>
	{{#each movie.opinions.all.reviews.entries as |review|}}
		{{> review-item review=review}}
	{{/each}}
</div>
