<!-- movies-show.handlebars -->
<div class="text-right">
	<a href="/reviews/new?movieId={{movie.id}}" class="btn btn-primary">Write Review</a>
</div>

<div class="row">
	<div class="col-sm-4">
		<img class="img-responsive" src="https://image.tmdb.org/t/p/w500{{movie.poster_path}}"/>
	</div>

	<div class="col-sm-8">
		<h1>{{movie.title}}</h1>
		<p class="lead">{{movie.overview}}</p>
	</div>
</div>

<div class="row">
	<div class="embed-responsive embed-responsive-16by9 col-sm-12">
		<iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{movie.videos.featured_video.key}}?rel=0"></iframe>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		<h3>Reviews</h3>
		{{#each reviews}}
			{{> review}}
		{{/each}}
	</div>
</div>
