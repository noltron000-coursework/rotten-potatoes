{{!-- Movies Show --}}
{{!-- Goals:
	- Show an expanded movie-card in great detail
	- Show a reviews gallery
--}}
{{!-- Variables:
	movie: the movie to use.
	config: api config information.
--}}

<link
	rel='stylesheet'
	href='/css/partials/movie-card.css'
/>

<link
	rel='stylesheet'
	href='/css/partials/review-gallery.css'
/>

<link
	rel='stylesheet'
	href='/css/partials/review-card.css'
/>

<div class='movies-show'>
	<h1>Movie Details</h1>
	<div class='gallery-grid'>

		{{> movie-card
			movie=movie
			complete=true
		}}

	</div>
</div>

<hr />

{{!--
<pre><code>{{json movie}}</code></pre>
<pre><code>{{json config}}</code></pre>
--}}
