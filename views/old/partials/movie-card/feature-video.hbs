{{!-- Main Trailer --}}
<dl class='contain-trailer'>
	{{#if movie.videos.[1]}}
		<div class='show-trailer'>
			<dt>Featured Video</dt>
			<dd><iframe
				width = '560'
				height = '315'
				src = '{{movie.videos.[1].urls.embed}}'
				title = 'YouTube video player'
				frameborder = '0'
				allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture'
				allowfullscreen = 'true'
			></iframe></dd>
		</div>
	{{/if}}

</dl>
