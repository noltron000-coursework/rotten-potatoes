<form class='new-comment'>

	{{!-- Hidden Identifier --}}
	<input
		type='hidden'
		value='{{review._id}}'
		name='reviewId'
	/>

	{{!-- Comment-Creator Block --}}
	<div class='form-group'>
		<label for='comment-content'>
			Leave a Comment
		</label>

		<br />

		<textarea
			class='form-control'
			id='comment-content'
			name='content'
			rows='10'
			placeholder='Your comment...'
		/></textarea>
	</div>

	{{!-- Submit Button --}}
	<div class='form-group'>
		<input
			type='submit'
			class='btn btn-primary'
			value='Create'
		/>
	</div>

</form>
