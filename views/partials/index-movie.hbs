<article
	class='movie'
	data-movie-id='{{movie.id}}'
>
	<div class='title button'>
		<h2>{{movie.title}}</h2>
		<p class='drawer'>Show More Details</p>
	</div>

	<a
		class='blur-link poster'
		href='/movies/{{movie.id}}'
	>
		<img src='https://image.tmdb.org/t/p/w500/{{movie.poster_path}}' />
		<p class='more-info'>
			View Movie Page
		</p>
	</a>

	<div class='details'></div>

</article>
