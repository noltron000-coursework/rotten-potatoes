{{!--
	movie: the movie to use.
	config: api config information.
	complete: whether details info are complete.
--}}

<article
	class='complete movie'
	data-movie-id='{{movie.api_id}}'
>

	{{> movie-card/title-bar/banner}}

	{{> components/portal
		classes='poster'
		image_path=(join (join config.images.secure_base_url 'w500') movie.featured_poster_path)
	}}

	{{> movie-card/details}}

	{{> movie-card/trivia}}

	{{> movie-card/media-lists}}

	{{> movie-card/reviews-list config=config}}

</article>
