{{!--
	movie: the movie to use.
	config: api config information.
	complete: whether details info are complete.
--}}

<article
	class='movie {{#if complete}}complete{{/if}}'
	data-movie-id='{{movie.api_id}}'
>

	{{> movie-card/title-bar}}

	{{#if complete}}
	{{> components/poster
		anchor=''
		poster_path=movie.featured_poster_path
		image_config=config.images
	}}
	{{else}}
	{{> components/poster
		anchor_path=(join '/movies/' movie.api_id)
		anchor_text='View Movie Details'
		poster_path=movie.featured_poster_path
		image_config=config.images
	}}
	{{/if}}

	{{> movie-card/details}}

	{{#if complete}}
	{{> movie-card/trivia}}
	{{> movie-card/media-lists}}
	{{> movie-card/reviews-list}}
	{{/if}}

</article>
