<!--
	Movie Card
	views/partials/movie-card.hbs
--->

<!--
	Variables:
	- movie (a parsed movie object)
--->

<article
	class='movie {{#if complete}}complete{{/if}}'
	data-movie-id='{{movie.ids.api}}'
>

	<div>
		<h2>{{movie.title}}</h2>
		{{#if movie.originalTitle}}
			<p>{{movie.originalTitle}}</p>
		{{/if}}
	</div>

	{{#if complete}}
	{{> components/portal
		classes='poster'
		anchor_path=movie.posters.[0].sizes.[0].urls.main
		image_path=movie.posters.[0].sizes.[3].urls.main
	}}
	{{else}}
	{{> components/portal
		classes='poster content'
		anchor_path=(join '/movies/' movie.ids.api)
		image_path=movie.posters.[0].sizes.[3].urls.main
		portal_text='View Movie Details'
	}}
	{{/if}}

	{{> movie-card/details}}

	{{#if complete}}
	{{> movie-card/trivia}}

	{{> movie-card/list-media}}

	{{> review-gallery}}
	{{/if}}

</article>
