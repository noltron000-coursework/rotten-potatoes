{{!--
	movie: the movie to use.
	config: api config information.
	complete: whether details info are complete.
--}}

<article
	class='movie {{#if movie.is_veritable}}complete{{/if}}'
	data-movie-id='{{movie.api_id}}'
>

	{{> movie-card/title-bar}}

	{{#if movie.is_veritable}}
	{{> components/portal
		classes='poster'
		anchor_path=(join (join config.images.secure_base_url 'original') movie.featured_poster_path)
		image_path=(join (join config.images.secure_base_url 'w500') movie.featured_poster_path)
	}}
	{{else}}
	{{> components/portal
		classes='poster content'
		anchor_path=(join '/movies/' movie.api_id)
		image_path=(join (join config.images.secure_base_url 'w500') movie.featured_poster_path)
		portal_text='View Movie Details'
	}}
	{{/if}}

	{{> movie-card/details}}

	{{#if movie.is_veritable}}
	{{> movie-card/trivia}}

	{{> movie-card/media-lists}}

	{{> movie-card/reviews-list config=config}}
	{{/if}}

</article>
