<fieldset>
	<legend>
		{{#if review}}
			Edit Review
		{{else}}
			Create Review
		{{/if}}
	</legend>

	<!-- TITLE -->
	<div class='form-group'>
		<label for='review-title'>
			Title
		</label>

		<br />

		<input
			id='review-title'
			type='text'
			name='title'
			value='{{review.title}}'
		/>
	</div>

	<!-- MOVIE RATING -->
	<div class='form-group'>
		<label for='movie-rating'>
			Movie Rating
		</label>

		<br />

		<select
			id='movie-rating'
			type=''
			name='rating'
		/>
			<option
				value='{{review.rating}}'
				label='
					{{#if review.rating}}
						- Unchanged -
					{{else}}
						- Not Any -
					{{/if}}'
				hidden='true'
				selected
			/>

			<option
				value=''
				label='- Not Any -'
			/>

			<option
				value='0'
				label='0: ☆☆☆☆☆'
			/>

			<option
				value='1'
				label='1: ★☆☆☆☆'
			/>

			<option
				value='2'
				label='2: ★★☆☆☆'
			/>

			<option
				value='3'
				label='3: ★★★☆☆'
			/>

			<option
				value='4'
				label='4: ★★★★☆'
			/>

			<option
				value='5'
				label='5: ★★★★★'
			/>
		</select>
	</div>

	<!-- CONTENT -->
	<div class='form-group'>
		<label for='review-content'>
			Content
		</label>

		<br />

		<textarea
			id='review-content'
			name='content'
			rows='10'
		>{{review.content}}</textarea>
	</div>
</fieldset>
