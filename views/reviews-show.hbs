<div class='row'>
	<div class='col-sm-6 col-sm-offset-3'>
		<h1>
			{{review.title}}
		</h1>

		{{#if review.grade}}
			<p>
				Grade: {{review.grade}} / 5
			</p>
		{{/if}}

		<p><span>
			{{review.content}}
		</span></p>

		<form
			method='POST'
			action='/reviews/{{review._id}}?_method=DELETE'
		>
			<input
				type='submit'
				value='Delete'
			/>

			<input
				type='button'
				onclick='window.location.href="/reviews/{{review._id}}/edit"'
				value='Edit'
			/>

			<input
				type='button'
				onclick='window.location.href="/movies/{{review.apiMovieId}}"'
				value='Back'
			/>
		</form>
		<hr />

		{{> comment-form}}

		<hr />

		<div id='comments'>
			{{#each comments}}
				{{> comment-card}}
			{{/each}}
		</div>
	</div>
</div>

<script
	type='text/javascript'
	src='/js/comments.js'
></script>
